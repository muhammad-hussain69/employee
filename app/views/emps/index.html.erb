<% if emp_signed_in? %>

  <p style="color: green"><%= notice %></p>

  <table class="table table-hover table-bordered table-striped">
    <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Role</th>
    </tr>
    </thead>

    <tbody>
    <% @emps.each do |emp| %>
      <%# if emp == current_emp %>
        <tr>
          <td><%= link_to emp.first_name + ' ' + emp.last_name , emp_path(emp.id) %></td>
          <td><%= emp.email %></td>
          <td><%= emp.phone %></td>
          <td><%= emp.role %></td>
        </tr>
      <%# end %>
    <% end %>
    </tbody>
  </table>

<% else %>
  <%= render 'emps/about' %>
<% end %>